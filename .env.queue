# Queue Configuration for Smart Parking System

# Queue Connection
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Queue-specific Redis settings
REDIS_QUEUE_CONNECTION=default
REDIS_QUEUE=smart_parking
REDIS_QUEUE_RETRY_AFTER=120

# Queue Workers
QUEUE_WORKERS=3
QUEUE_MAX_TRIES=3
QUEUE_TIMEOUT=300

# Scheduled Jobs
CLEANUP_EXPIRED_BOOKINGS_SCHEDULE="0 */6 * * *"  # Every 6 hours
BRTA_VERIFICATION_SCHEDULE="0 9 * * *"          # Daily at 9 AM
PAYMENT_RECONCILIATION_SCHEDULE="0 23 * * *"    # Daily at 11 PM

# Queue Monitoring
QUEUE_FAILED_JOBS_TABLE=failed_jobs
QUEUE_BATCHES_TABLE=job_batches

# Email Queue
MAIL_QUEUE=emails
NOTIFICATION_QUEUE=notifications
BRTA_QUEUE=brta_verification
PAYMENT_QUEUE=payments
CLEANUP_QUEUE=cleanup
